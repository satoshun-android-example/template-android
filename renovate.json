{
  "extends": [
    "config:base"
  ],
  "gradle": {
    "enabled": true,
    "fileMatch": [
      "libs.versions.kmp.toml"
    ]
  },
  "packageRules": [
    {
      "groupName": "Kotlin, KSP and Compose Compiler",
      "groupSlug": "kotlin",
      "matchPackagePrefixes": [
        "com.google.devtools.ksp",
        "androidx.compose.compiler"
      ],
      "matchPackagePatterns": [
        "org.jetbrains.kotlin.*"
      ]
    }
  ]
}
